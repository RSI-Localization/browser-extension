{
  "manifest_version": 3,
  "name": "RSI Localization",
  "version": "1.0",
  "description": "Localise the Roberts Space Industries website. Developed by Laeng with GalaxyHub.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.robertsspaceindustries.com/*"
      ],
      "js": [
        "index.js"
      ],
      "run_at": "document_end",
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.js",
        "styles.css"
      ],
      "matches": [
        "https://*.robertsspaceindustries.com/*"
      ]
    }
  ],
  "icons": {
    "48": "assets/icon/icon-48.png",
    "128": "assets/icon/icon-128.png"
  }
}